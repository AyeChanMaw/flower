<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/flower_image"
        android:layout_width="411dp"
        android:layout_height="190dp"
        android:scaleType="center"
        android:src="@drawable/flower_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_header"
        android:textSize="@dimen/header_size"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        app:layout_constraintTop_toBottomOf="@+id/flower_image"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/header_size"
        android:textColor="@color/textColor"
        app:layout_constraintTop_toBottomOf="@+id/txt_header"
        app:layout_constraintLeft_toLeftOf="@+id/txt_header"
        android:text="@string/txt_name"/>

    <ImageView
        android:id="@+id/ic_star"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:src="@drawable/ic_star_black_24dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_header"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_choice"
        android:textSize="@dimen/choice_size"
        android:textColor="@color/themeColor"
        android:layout_marginTop="@dimen/dimen_30dp"
        app:layout_constraintLeft_toRightOf="@+id/ic_star"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        />

    <TextView
        android:id="@+id/txt_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/dis_size"
        android:text="@string/str_description"
        app:layout_constraintTop_toBottomOf="@+id/ic_star"
        app:layout_constraintLeft_toLeftOf="@+id/txt_header"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="$99.9"
        android:textSize="@dimen/dis_size"
        android:layout_marginBottom="@dimen/dimen_16dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_header"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/btn_txt"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="@dimen/dimen_16dp"
        android:paddingLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>